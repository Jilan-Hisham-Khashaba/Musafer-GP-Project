@model CitiesModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="container d-flex justify-content-between  request    flex-column " style="width: 60%;">
    <div class="d-flex justify-content-between align-items-center   ">
    </div>
                <h1 class="fs-15 text-center">Edit</h1>
                <form method="post" asp-action="Edit">
                    <div class="py-3">
                        <label for="cityName" class="text-secondary py-2 fw-medium" asp-for="cityName">city</label>
                        <input type="text" id="cityName" placeholder="Enter Your Name" asp-for="cityName" class="form-control p-3">

                        <span asp-validation-for="cityName"></span>
                    </div>
                    <div class="py-3">
                        <label for="countryName" class="text-secondary py-2 fw-medium" asp-for="countryName">countryName</label>
                        <input type="text" id="countryName" placeholder="Enter Your Name" asp-for="countryName" class="form-control p-3">

                        <span asp-validation-for="countryName"></span>
                    </div>
                    <div class="py-3">
                        <label for="contient" class="text-secondary py-2 fw-medium" asp-for="contient">contient</label>
                        <input type="text" id="contient" placeholder="Enter Your Name" asp-for="contient" class="form-control p-3">

                        <span asp-validation-for="contient"></span>
                    </div>

                   @*  <div class="d-flex justify-content-center align-items-center py-2 ">
                     *@

                    <button class="btn SignBtn my-4 btn-outline-dark w-25 rounded-5 " type="submit">Edit</button>
                    
                </form>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
            </div>

        </div>
    </div>
</div>
