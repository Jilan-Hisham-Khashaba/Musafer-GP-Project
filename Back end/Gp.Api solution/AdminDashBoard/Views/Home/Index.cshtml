@model AdminCountModel
@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container d-flex justify-content-center    py-5 m-auto " style="width: 80%;">
    <div class="items d-flex justify-content-between align-items-center  px-5 py-2   ">
        <div class="FristBox  Active mx-5 text-center p-4 border rounded-5 ">
            <h5>
                All Admins
            </h5>
            <h2>
                @Model.AdminCount
            </h2>
        </div>

        <div class="FristBox mx-5 text-center p-4  border  ">
            <h5>
                New Users
            </h5>
            <h2>
                @Model.UserCount
            </h2>
        </div>



        <div class="FristBox  mx-5 text-center p-4 border  ">
            <h5>
                New Requests
            </h5>
            <h2>
                @Model.RequestCount
            </h2>
        </div>

        <div class="FristBox  mx-5 text-center p-4 border ">
            <h5>
                New Trips
            </h5>
            <h2>
                @Model.TripCount
            </h2>
        </div>

        <div class="FristBox  mx-5 text-center p-4 border ">
            <h5>
               In Transit
            </h5>
            <h2>
                @Model.OrderCount
            </h2>
        </div>

        <div class="FristBox  mx-5 text-center p-4 border  ">
            <h5>
                New Shipments
            </h5>
            <h2>
                @Model.shipmentCount
            </h2>
        </div>

    </div>
</div>


<div class="container FristBox d-flex justify-content-between rounded border py-5 flex-column " style="width: 95%;height:70% ;margin-left:150px;">

    <div class="d-flex justify-content-between align-items-center   py-3">
        <h5 class="mx-4 fw-bold ">Recent Transactions</h5>
        <button class="btn  addBtn py-1 px-4 mx-5 rounded-pill"> Filter <i class="fa-solid fa-arrow-up-wide-short px-2"></i></button>
    </div>
    <div class="d-flex  justify-content-center align-items-center ">
        <table class="w-100">
            <thead>
                <tr>
                    <th>IdTransaction</th>
                    <th>ItemName</th>
                    <th>Reward</th>
                    <th>Qty</th>
                    
                    <th>Weight</th>
                    <th>City</th>
                    <th>OrderDate</th>
                    <th>Status</th>
                    <th>Amount</th>
                </tr>

            </thead>
            <tbody>
                <hr>
                @foreach (var order in Model.TodayOrders)
                {
                <tr>
                    <td>#@order.Id</td>
                        <td>    @string.Join(", ", order.Request.Shipment.Products.Select(p => p.ProductName))</td>
                    <td>$@order.Request.Trip.UnitPricePerKg </td>
                    <td>1</td>
                        <td>@order.Request.Shipment.Weight Kg</td>
                    <td>@order.Request.Trip.ToCity.NameOfCity</td>
                        <td>@order.DateOfCreation?.ToString("dd MMM yyyy")</td>
                        <td>
                           <span class="status-indicator"></span>
                        @order.Status</td>
                        <td>@string.Join(", ", order.Request.Shipment.Products.Select(p => p.ProductPrice.ToString("C")))</td>

                </tr>
                
                <hr>
                }
            </tbody>
        </table>
    </div>
</div>
 







